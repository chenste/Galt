<launch>
    <arg name="bag"/>
    <arg name="topic"/>

    <node pkg="rosbag" type="play" name="rosbag" args="-d 2 $(arg bag)"/>
    <node name="extractor" pkg="image_view" type="extract_images"
        respawn="false" output="screen" cwd="ROS_HOME">
        <remap from="image" to="$(arg topic)"/>
    </node>
</launch>
