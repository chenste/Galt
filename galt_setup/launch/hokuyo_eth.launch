<!--
  Name: hokyyo_eth.launch
  Triggers:
    * urg_node

  Brief: Launch the hokuyo LiDAR in ethernet configuration..

  Topics you should record:
    * /hokuyo/scan
-->
<launch>
    <arg name="ip" default="192.168.0.10"/>
    <arg name="ns" default="hokuyo"/>
    <arg name="disp" default="screen"/>
    <arg name="calibrate_time" default="true"/>

    <node name="urg_node" pkg="urg_node" type="urg_node" respawn="true"
        output="$(arg disp)" ns="$(arg ns)">
        <param name="ip_address" type="string" value="$(arg ip)"/>
        <param name="calibrate_time" type="bool" value="$(arg calibrate_time)"/>
    </node>
</launch>
