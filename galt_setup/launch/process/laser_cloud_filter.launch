<launch>
    <arg name="laser" default="hokuyo"/>
    <arg name="target_frame" default="laser"/>
    <arg name="filter"/>

    <node pkg="laser_filters" type="scan_to_cloud_filter_chain"
        name="laser_cloud_filter" ns="$(arg laser)">
        <rosparam command="load" file="$(arg filter)"/>
        <param name="high_fidelity" value="false"/>
        <param name="target_frame" type="string" value="$(arg target_frame)"/>
    </node>
</launch>
