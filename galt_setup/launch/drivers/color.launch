<!--
  Name: color.launch
  Triggers:
    * bluefox2 (1x)

  Brief: Launch one Matrix-Vision bluefox2 MLC usb camera.

  Topics you should record:
    * /color/camera_info
    * /color/image_raw
-->
<launch>
    <!--Camera Settings-->
    <arg name="device" value="$(env GALT_COLOR_SERIAL)"/>
    <arg name="rate" value="$(env GALT_COLOR_RATE)"/>

    <include file="$(find bluefox2)/launch/single_node.launch">
        <arg name="device" value="$(arg device)"/>
        <arg name="rate" value="$(arg rate)"/>
        <arg name="camera" value="$(env GALT_COLOR_FRAME)"/>
        <arg name="calib_url" value="$(env GALT_CAMERA_CALIB_DIR)/mv_$(arg device).yaml"/>
        <arg name="expose_us" value="5000"/>
        <arg name="aec" value="3"/>
        <arg name="ctm" value="0"/>
        <arg name="wbp" value="3"/>
        <arg name="color" value="true"/>
    </include>
</launch>
