<launch>
    <arg name="laser" default="hokuyo/scan_filtered"/>
    <arg name="max_scans" default="400"/>
    <arg name="fixed_frame"/>

    <node pkg="laser_assembler" type="laser_scan_assembler" name="laser_assembler"
        ns="assembler">
        <remap to="~scan" from="$(arg laser)"/>
        <param name="max_scans" type="int" value="$(arg max_scans)"/>
        <param name="fixed_frame" type="string" value="$(arg fixed_frame)"/>
    </node>
</launch>
