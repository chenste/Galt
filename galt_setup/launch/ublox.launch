<!--
  Name: ublox.launch
  Triggers:
    * ublox_gps

  Brief: Launch the ublox gps in 'ublox_gps' namespace. Device resides at
  /dev/ttyUSB0. Ublox node itself fixes data rate at 5Hz.

  Topics you should record:
    * /ublox_gps/fix
    * /ublox_gps/fix_velocity
    * /ublox_gps/navposllh
    * /ublox_gps/navstatus
    * /ublox_gps/navvelned
-->

<launch>
  <arg name="disp" default="log"/>
  <node name="ublox_gps" pkg="ublox_gps" type="ublox_gps"
        output="$(arg disp)" respawn="true">
    <param name="device" type="string" value="/dev/serial/by-id/usb-u-blox_AG_-_www.u-blox.com_u-blox_7_-_GPS_GNSS_Receiver-if00"/>

    <!-- Device options -->
    <param name="frame_id" type="string" value="gps"/>
    <param name="baudrate" type="int" value="57600"/>
    <param name="meas_rate" type="int" value="200"/>
    <param name="enable_sbas" type="bool" value="true"/>
    <param name="dynamic_model" type="string" value="airborne1"/>
    <param name="fix_mode" type="string" value="both"/>
    <param name="dr_limit" type="string" value="0"/>
  </node>
</launch>
