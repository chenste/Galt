<!--
  Name: deploy_base.launch
  Author: Gareth
  Triggers:
    * ublox
    * imu_3dm_gx4
    * kr_attitude_eskf (run mode, not calibrate)
    * bluefox2 (3 sensing, 2 stereo)

  Brief: Launch the base configuration of IRIS. This includes all devices
  which will be employed in all sensing modes.
-->
<launch>

  <!-- ublox -->
  <include file="$(find galt_setup)/launch/ublox.launch"/>

  <!-- IMU -->
  <include file="$(find galt_setup)/launch/imu_3dm_gx4.launch"/>

  <!-- Attitude Filter -->
  <include file="$(find galt_setup)/launch/kr_attitude_eskf.launch"/>

  <!-- Cameras -->
  <include file="$(find galt_setup)/launch/bluefox2_sensing.launch"/>
  <include file="$(find galt_setup)/launch/bluefox2_stereo.launch"/>

</launch>
