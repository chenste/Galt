<launch>
    <arg name="square" default="8x6"/>
    <arg name="size" default="0.024"/>
    <arg name="camera" default="/flir_gige"/>
    <arg name="image" default="$(arg camera)/image_raw"/>

    <include file="$(find flir_gige)/launch/node.launch">
    </include>

    <node pkg="camera_calibration" type="cameracalibrator.py" name="calibrator"
        args="--size $(arg size) --square $(arg square) image:=$(arg image)
        camera:=$(arg camera)">
    </node>
</launch>
