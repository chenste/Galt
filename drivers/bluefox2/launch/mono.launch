<launch>

  <arg name="serial_left" default="25000855" />
  <arg name="calibration_file" default="cam$(arg serial_left).yml" />

  <node pkg="bluefox2" type="bluefox2" name="cam$(arg serial_left)" output="screen" >
    <param name="fps" type="double" value="30.0" />
    <param name="gain" type="double" value="0.0" />
    <param name="exposure_time_us" type="int" value="10000" />
    <param name="use_auto_exposure" type="bool" value="true" />
    <param name="use_color" type="bool" value="false" />
    <param name="use_binning" type="bool" value="false" />
    <param name="serial_left"  type="string" value="$(arg serial_left)" />
    <param name="calibration_url" type="string" value="package://bluefox2/config/$(arg calibration_file)" />
  </node>

</launch>
