<launch>
    <arg name="camera" default="camera"/>
    <arg name="output" default="screen"/>
    <arg name="image" default="image_raw"/>
    <arg name="assembler" default="assembler"/>

    <node pkg="img2pcl" type="img2pcl_node" name="img2pcl"
        ns="$(arg camera)" output="$(arg output)">
        <param name="image" type="string" value="$(arg image)"/>
        <remap from="assemble" to="/$(arg assembler)/assemble_scans"/>
    </node>
</launch>
