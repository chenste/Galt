<launch>
    <!--These transformations are acquired by kalibr and verified by cad drawings-->
    <!--static_transform_publisher x y z qx qy qz qw frame_id child_frame_id-->

    <!--imu_stereo_left-->
    <node pkg="tf2_ros" type="static_transform_publisher"
      name="imu_stereo_broadcaster"
      args="-0.004305 -0.047038 -0.032479 0 0 0 1 stereo imu">
    </node>

    <!--stereo_left_color-->
    <node pkg="tf2_ros" type="static_transform_publisher"
      name="stereo_color_broadcaster"
      args="0.043979 0.001128 -0.002047 0 0 0 1 mv_29900189 stereo">
    </node>

    <!--stereo_left_thermal-->
    <node pkg="tf2_ros" type="static_transform_publisher"
        name="stereo_thermal_broadcaster"
        args="0.134046 0.000133 0.01294 0 0 0 1 thermal stereo">
    </node>

    <!--imu_laser-->
    <node pkg="tf2_ros" type="static_transform_publisher"
        name="imu_laser_broadcaster"
        args="0.07 0.05 0.03 0.707107 0 0.707107 0 imu laser">
    </node>
</launch>
